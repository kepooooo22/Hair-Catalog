
<%= form_with model: @product, url: admin_products_path, local: true do |f|%>
<%= render "admin/shared/error_messages", resource: @product %>
  <div class="field">
    <%= f.label :name, "商品名" %><br />
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :explanation, "商品説明" %><br />
    <%= f.text_area :explanation, class: :form__text %>
  </div>

  <div class="field">
    <%= f.label :proce, "販売価格" %><br />
    <%= f.number_field :price, class: :form__text %>
  </div>

  <div class="field">
    <%= f.label :stock, "在庫" %><br />
    <%= f.number_field :stock %>
  </div>

  <div class="field">
    <%= f.label :image, "商品画像" %><br />
    <%= f.file_field :image %>
  </div>

  <div class="actions">
    <%= f.submit "登録する", class: :form__btn  %>
  </div>
<% end %>