<div class="main">
  <div class="inner">
    <div class="form__wrapper">
      <h2 class="page-heading">新規会員登録</h2>

      <%= form_with model: @customer, url: customer_registration_path, local: true do |f| %>
      <%= render "customer/shared/error_messages", resource: resource %>  
        
        <div class="field">
          <%= f.label :name, "お名前 (フルネーム) " %><br />
          <%= f.text_field :name %>
        </div>

        <div class="field">
          <%= f.label :email, "メールアドレス" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :password, "パスワード（6文字以上）" %><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, "パスワード再入力" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>


        <div class="actions">
          <%= f.submit "新規会員登録する", class: :form__btn  %>
        </div>
      <% end %>
    </div>
  </div>
</div>