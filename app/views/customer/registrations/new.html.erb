<div class="main">
  <div class="inner">
    <div class="form__wrapper">
      <h2 class="page-heading">新規会員登録</h2>

      <%= form_with model: @customer, url: customer_registration_path, local: true do |f| %>
        <%= render "customer/shared/error_messages", resource: f.object %>

        <div class="row mb-3">
          <div class="col-sm-5">
            <%= f.label :name, "お名前", class: "col-form-label" %>
            <div class="col-sm-10">
              <%= f.text_field :name, class: "form-control" %>
            </div>
          </div>
        </div> 
        <div class="row mb-3">
          <div class="col-sm-5">
            <%= f.label :email, "email", class: "col-form-label" %>
            <div class="col-sm-10">
              <%= f.email_field :email, class: "form-control" %>
            </div>
          </div>
        </div>
        <div class="row mb-3">
          <div class="col-sm-5">
            <%= f.label :password, "パスワード", class: "col-form-label" %>
            <div class="col-sm-10">
              <%= f.password_field :password, class: "form-control" %>
            </div>
          </div>
        </div>
        <div class="row mb-3">
          <div class="col-sm-5">
            <%= f.label :password_confirmation, "パスワード(再入力)", class: "col-form-label" %>
            <div class="col-sm-10">
              <%= f.password_field :password_confirmation, class: "form-control" %>
            </div>
          </div>
        </div>
        <button type="submit" class="btn btn-primary">会員登録する</button>
      <% end %>
    </div>
  </div>
</div>
